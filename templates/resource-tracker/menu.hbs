<input class="hidden" type="text" name="id" value="{{resource.id}}">
<div class="form-group">
    <label>{{@root.i18n 'name.label'}}</label>
    <div class="form-fields">
        <input type="text" name="name" value="{{resource.name}}"
            placeholder="{{@root.i18n 'name.default'}}">
    </div>
</div>
<div class="form-group">
    <label>{{@root.i18n 'shared'}}</label>
    <div class="form-fields">
        <input type="checkbox" name="shared" {{checked resource.shared}}>
    </div>
</div>
<div class="form-group">
    <label {{{@root.i18n.tooltip 'timeout.tooltip' }}}>
        {{@root.i18n 'timeout.label'}}
        <i class="fa-solid fa-circle-question"></i>
    </label>
    <div class="form-fields">
        <input type="number" name="timeout" value="{{resource.timeout}}" min="0" step="1">
    </div>
</div>
<fieldset>
    <legend>{{@root.i18n 'value.label'}}</legend>
    <div class="form-group">
        <label>{{@root.i18n 'value.min'}}</label>
        <div class="form-fields">
            <input type="number" name="min" value="{{resource.min}}" step="1">
        </div>
    </div>
    <div class="form-group">
        <label>{{@root.i18n 'value.max'}}</label>
        <div class="form-fields">
            <input type="number" name="max" value="{{resource.max}}" step="1">
        </div>
    </div>
    <div class="form-group">
        <label>{{@root.i18n 'value.current'}}</label>
        <div class="form-fields">
            <input type="number" name="value" value="{{resource.value}}" step="1">
        </div>
    </div>
</fieldset>
<fieldset>
    <legend>{{@root.i18n 'steps.label'}}</legend>
    <div class="form-group">
        <label>{{@root.i18n 'steps.step1'}}</label>
        <div class="form-fields">
            <input type="number" name="step1" value="{{resource.step1}}" min="1" step="1">
        </div>
    </div>
    <div class="form-group">
        <label>{{@root.i18n 'steps.step2'}}</label>
        <div class="form-fields">
            <input type="number" name="step2" value="{{resource.step2}}" min="1" step="1">
        </div>
    </div>
    <div class="form-group">
        <label>{{@root.i18n 'steps.step3'}}</label>
        <div class="form-fields">
            <input type="number" name="step3" value="{{resource.step3}}" min="1" step="1">
        </div>
    </div>
</fieldset>
{{#unless isCreate}}
<div class="delete">
    <label>{{@root.i18n 'delete'}}</label>
    <input type="checkbox" name="delete">
</div>
{{/unless}}